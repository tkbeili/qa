<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @question.body %>
</p>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>

<hr>

Add new Answer
<div class="answer_creations_errors"></div>
<%= form_for [@question, Answer.new], remote: true do |f| %>
  <%= f.text_area :body %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

<h3> Answers </h3>
<hr>
<div class="answers">
  <%= render @question.answers %>
</div>